{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
   },
   "exclude": ["node_modules"],
   "include": [
     "config/*.js",
     "types.d.ts",
     "**/*.ts",
     "**/*.tsx",
   ] 
}
